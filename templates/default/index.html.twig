{% extends 'base.html.twig' %}

{% block title 'Welcome to Simflix!' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="jumbotron">
                    <h1 class="display-4">Welcome to Symflix!</h1>
                    <p class="lead">A streaming video platform</p>
                </div>

                <div class="row">
                    {% for i in 0..3 %}
                        <div class="col">
                            <div class="card mr-2">
                                <img src="https://via.placeholder.com/276x160" class="card-img-top" alt="...">
