{% extends 'base.html.twig' %}

{% block title %}Media{% endblock %}

{% block body %}
    <h1>Media</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ medium.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ medium.title }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ medium.slug }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ medium.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ medium.image }}" alt=""></td>
            </tr>
            <tr>
                <th>IsSerie</th>
                <td>{{ medium.isSerie ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ medium.createdAt ? medium.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ medium.updatedAt ? medium.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ medium.isActive ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <div>
        {{ form(form) }}
    </div>

    <a href="{{ path('media_index') }}">back to list</a>

    <a href="{{ path('media_edit', {'slug': medium.slug}) }}">edit</a>

    {{ include('media/_delete_form.html.twig') }}
{% endblock %}
