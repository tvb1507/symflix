{% extends 'base.html.twig' %}

{% block title %}Media index{% endblock %}

{% block body %}
    <h1>Media index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Slug</th>
                <th>Description</th>
                <th>Image</th>
                <th>IsSerie</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>IsActive</th>
                <th>Tags</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for medium in media %}
            <tr>
                <td>{{ medium.id }}</td>
                <td>{{ medium.title }}</td>
                <td>{{ medium.slug }}</td>
                <td>{{ medium.description }}</td>
                <td><img src="{{ medium.image }}" alt=""></td>
                <td>{{ medium.isSerie ? 'Yes' : 'No' }}</td>
                <td>{{ medium.createdAt ? medium.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ medium.updatedAt ? medium.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ medium.isActive ? 'Yes' : 'No' }}</td>
                <td>{% for tag in medium.tags %}{{ tag.name }} <br> {% endfor %}</td>
                <td>
                    <a href="{{ path('media_show', {'slug': medium.slug}) }}">show</a>
                    <a href="{{ path('media_edit', {'slug': medium.slug}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('media_new') }}">Create new</a>
{% endblock %}
